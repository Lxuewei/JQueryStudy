<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>test</title>
    <style>
        div{
            width: 500px;
            height:100px;
            padding:5px;
            margin: 5px;
            border: 1px solid #ccc;
        }
        .left{
            background:#bfa;
        }
        .right{
            background: yellow;
            display: none;
        }

    </style>
    <script src="jquery.min.js"></script>
</head>
<body>
      <h2>toggle show and hide</h2>
      <div class="left">from show to hide</div>
      <div class="right">from hide to show</div>
      <button class="button1">show-hide</button>
      <button class="button2">hide-show</button>
      <script type="text/javascript">
          $(".button1").click(function () {
              $(".left").toggle(3000)
          });
      </script>
      <script type="text/javascript">
          $(".button2").click(function () {
              $(".right").toggle(3000)
          });
      </script>
</body>
